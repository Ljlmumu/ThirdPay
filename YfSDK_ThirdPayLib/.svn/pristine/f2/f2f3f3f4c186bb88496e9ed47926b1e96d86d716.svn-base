<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/yf_suspension_item_bg_selector"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/yf_suspension_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:background="@drawable/yf_suspend_icon_default"
        android:maxHeight="25dp"
        android:maxWidth="25dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/yf_suspension_item_iv"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/yf_suspension_num_tv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/yf_suspension_item_num"
                android:gravity="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/yf_suspension_item_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/yf_suspension_item_describe_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/yf_suspension_item_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:background="@drawable/yf_suspension_item_download_selector" />

</LinearLayout>