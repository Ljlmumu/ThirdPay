<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yfTipSMS"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@android:color/transparent"
    android:gravity="left"
    android:minHeight="90dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/yfTxtUnlyGoodsTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/yf_payment_channel_context"
        android:textColor="@color/yf_color_666666"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_margin="10dp" >

        <Button
            android:id="@+id/yfBtnUnglyConfirmPay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:background="@drawable/yf_btn_pointer_game_selector"
            android:text="@string/yf_payment_channel_confirm"
            android:textColor="@android:color/white"
            android:layout_marginRight="3dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/yfBtnUnglyCancelPay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="42dp"
            android:background="@drawable/yf_btn_confirm_quit_selector"
            android:text="@string/yf_payment_channel_cancel"
            android:textColor="@color/yf_color_333333"
            android:layout_marginLeft="3dp"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>