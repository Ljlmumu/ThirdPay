<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yf_layout_payment_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="@drawable/new_bg_dialog1"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/yf_layout_dialog_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/yf_layout_dialog_tip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp" >

            <TextView
                android:id="@+id/yf_tv_dialog_tip_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/yf_tv_dialog_tip_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="14dp" >

        <Button
            android:id="@+id/yf_btn_dialog_back"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/yf_payment_btn_pay_selector"
            android:gravity="center"
            android:text="@string/yf_btn_string_back"
            android:textColor="@color/yf_gamesdk_white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/yf_btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@drawable/yf_payment_btn_pay_selector"
            android:gravity="center"
            android:text="@string/Cancel"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>